{
  "manifest_version": 2,

  "name": "Neuralics",
  "description": "Improves your focus and productivity.",
  "version": "1.0",
  "icons": {
    "128": "icon128.png",
    "48": "icon48.png",
    "16": "icon16.png"
  },

  "browser_action": {
    "default_icon": "icon16.png",
    "default_popup": "popup.html"
  },

  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },

  "permissions": [
          "storage",
          "notifications",
          "contextMenus",
          "tabs",
          "background",
          "webRequest",
          "webRequestBlocking",
          "<all_urls>"
        ]
}